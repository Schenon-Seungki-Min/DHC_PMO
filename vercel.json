{
  "version": 2,
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/server.js" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/login.html", "dest": "/public/login.html" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
